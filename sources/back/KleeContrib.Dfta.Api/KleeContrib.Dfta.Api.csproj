	</ItemGroup>

	<Target Name="PostBuild" Condition="$(Version) == '0'" AfterTargets="PostBuildEvent">
		<Exec Command="docker restart kleecontrib-dfta-api-1" IgnoreExitCode="true" />
	</Target>

</Project>
